<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/darker_gray"
    tools:context="fanzone.datacollection.Profile">

    <ScrollView
        android:layout_centerHorizontal="true"
        android:overScrollMode="never"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layer_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/status"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/surver_name"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:inputType="text"
                    android:scrollHorizontally="true"
                    android:text="Surveyor Name"/>

                <TextView
                    android:id="@+id/surver_date"
                    android:layout_below="@+id/surver_name"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:inputType="text"
                    android:scrollHorizontally="true"
                    android:text="Surveyor Date"/>
                <TextView
                    android:id="@+id/location"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:layout_below="@+id/surver_date"
                    android:text="Location "/>

                <TextView
                    android:id="@+id/match"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:layout_below="@+id/location"
                    android:text="Match"/>

                <LinearLayout
                    android:id="@+id/emptytwo"
                    android:layout_below="@+id/match"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="25dp"
                        android:background="@android:color/white"/>
                </LinearLayout>



                <TextView
                    android:id="@+id/name"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:layout_below="@+id/emptytwo"
                    android:text="Name"/>

                <TextView
                    android:id="@+id/gender"
                    android:layout_below="@+id/name"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="Gender"/>

                <TextView
                    android:id="@+id/age"
                    style="@style/CustomTextView"
                    android:layout_below="@+id/gender"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="Age"/>
                <TextView
                    android:id="@+id/from_loc"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:layout_below="@+id/age"
                    android:text="From Location"/>
                <TextView
                    android:id="@+id/phone"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:layout_below="@+id/from_loc"
                    android:text="Phone"/>

                <TextView
                    android:id="@+id/email"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:layout_below="@+id/phone"
                    android:text="Email"/>

                <TextView
                    android:id="@+id/fev_team"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:layout_below="@+id/email"
                    android:text="Favourite Team"/>

                <TextView
                    android:id="@+id/profession"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:layout_below="@+id/fev_team"
                    android:text="Profession"/>

                <TextView
                    android:id="@+id/education"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:layout_below="@+id/profession"
                    android:text="Education"/>


               <!-- <Button
                    android:id="@+id/btn_back"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/education"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="20dp"
                    android:text="Add"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:background="@drawable/custom_button"
                    android:layout_width="150dp"
                    android:layout_height="45dp" />

-->
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/statusshow"
            android:layout_weight="1"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_surver_name"
                style="@style/CustomTextView"
                android:singleLine="true"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:text="d"/>

            <TextView
                android:id="@+id/tv_surver_date"
                style="@style/CustomTextView"
                android:layout_below="@+id/tv_surver_name"
                android:singleLine="true"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:text="d"/>
            <TextView
                android:id="@+id/tv_location"
                style="@style/CustomTextView"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_below="@+id/tv_surver_date"
                android:text="d"/>

            <TextView
                android:id="@+id/tv_match"
                style="@style/CustomTextView"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_below="@+id/tv_location"
                android:text="d"/>

            <LinearLayout
                android:id="@+id/empty"
                android:layout_below="@+id/tv_match"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="25dp"
                    android:background="@android:color/white"/>
            </LinearLayout>



            <TextView
                android:id="@+id/tv_name"
                style="@style/CustomTextView"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_below="@+id/empty"
                android:text="d"/>

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_below="@+id/tv_name"
                    style="@style/CustomTextView"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="d"/>

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/CustomTextView"
                    android:layout_below="@+id/tv_gender"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="d"/>
            <TextView
                android:id="@+id/tv_from_loc"
                style="@style/CustomTextView"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_below="@+id/tv_age"
                android:text="d"/>
            <TextView
                android:id="@+id/tv_phone"
                style="@style/CustomTextView"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_below="@+id/tv_from_loc"
                android:text="d"/>

            <TextView
                android:id="@+id/tv_email"
                style="@style/CustomTextView"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_below="@+id/tv_phone"
                android:text="d"/>

            <TextView
                android:id="@+id/tv_fev_team"
                style="@style/CustomTextView"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_below="@+id/tv_email"
                android:text="d"/>

            <TextView
                android:id="@+id/tv_profession"
                style="@style/CustomTextView"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_below="@+id/tv_fev_team"
                android:text="d"/>

            <TextView
                android:id="@+id/tv_education"
                style="@style/CustomTextView"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_below="@+id/tv_profession"
                android:text="dd"/>



            <Button
                android:id="@+id/btn_list"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/tv_education"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:text="List"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:background="@drawable/custom_button"
                android:layout_width="150dp"
                android:layout_height="45dp" />

            <TextView
                android:id="@+id/exxx"
                style="@style/CustomTextView"
                android:layout_below="@+id/btn_list"
                android:singleLine="true"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:text=""/>
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
